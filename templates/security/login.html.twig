
{% extends "base.html.twig" %}


{% block body %}
 {% include "public/shared/_side.html.twig" %} 



<div class="container mt-5">

<h3 style="text-align:center">Se connecter</h3>
 <div class="row">
    <div class="col-sm mx-5 mt-5 " style="border:solid 1px black; border-radius:5px;padding:30px">
   
   
<div class="content_register">
		<form method="post">


			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}


			

				<div class="form-group">

					<label for="inputEmail">adresse email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
<div style="text-align:center" >
					<button  class="btn btn-primary mt-3"  style="align-item:center" type="submit">valider</button>
</div>
				</form>

		<div style="text-align:center">		
 <a href="{{ path('app_forgot_password_request') }}" style="textalign:center;font-size:20px"> Mot de passe oublie </a>
	</div>
	</div>











   
   </div>
     </div>


   </div>



{% endblock %}




















      


     