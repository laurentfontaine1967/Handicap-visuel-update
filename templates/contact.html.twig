{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body %}


	{% include "public/shared/_side.html.twig" %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-sm mx-3">
				{% include "public/shared/_navbar.html.twig" %}
			</div>

		</div>

		<div class="container mt-3">
			<div class="row">
				<div class="col-sm-12">
					{% include "public/shared/_messages_flash.html.twig" %}
				</div>


				<div class="form-group">

					{{ form_start(form) }}
					<div class="mb-4">
						{{ form_row(form.mail)}}
					</div>
					<div class="mb-4">
						{{ form_row(form.sujet)}}
					</div>
					{{ form_row(form.message)}}
					{{ form_rest(form)}}
					<button type="submit" class="btn btn-primary mb-1">Envoyer</button>

				</div>
			</div>
		</div>

	{% endblock %}
